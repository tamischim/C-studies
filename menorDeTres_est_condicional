#include <stdio.h>

int main (){

    int x, y, z;

    printf("BRASIL ESCOLA\n");
    printf("Menor de tres\n");
    printf("Digite o primeiro valor: ");
    scanf ("%d", &x);
    printf("Digite o segundo valor: ");
    scanf ("%d", &y);
    printf("Digite o terceiro valor: ");
    scanf ("%d", &z);

    if (x < y && x < z) {
        printf("Menor = %d", x);
    }
    else if (y < x && y < z) {
        printf("Menor = %d", y);
    }
    else {
        printf("Menor = %d", z);
    }

    return 0;
}
